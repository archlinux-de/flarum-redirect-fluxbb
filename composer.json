{
    "name": "archlinux-de/flarum-redirect-fluxbb",
    "description": "Redirect legacy FluxBB URLs to Flarum",
    "license": "GPL-3.0-or-later",
    "type": "flarum-extension",
    "require": {
        "PHP": "^8.2",
        "flarum/core": "^1.0.0",
        "flarum/tags": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "ArchLinux\\RedirectFluxBB\\": "src/",
            "ArchLinux\\RedirectFluxBB\\Test\\": "tests/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "FluxBB Redirect",
            "icon": {
                "name": "fas fa-directions",
                "backgroundColor": "#08c",
                "color": "#fff"
            }
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
